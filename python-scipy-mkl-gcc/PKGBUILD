pkgname='python-scipy-mkl-gcc'
_pkgname='python-scipy'
pkgver=1.3.1
pkgrel=1
pkgdesc="SciPy is open-source software for mathematics, science, and engineering."
arch=('x86_64')
_github="scipy/scipy"
url="http://www.scipy.org/"
license=('BSD')
depends=('python-numpy-mkl')
provides=("python3-scipy=${pkgver}" "python-scipy=${pkgver}" "python-scipy-mkl=${pkgver}" "scipy=${pkgver}")
replaces=('python-scipy')
conflicts=('python-scipy')
optdepends=('python-pillow: for image saving module')
makedepends=('cython' 'gcc-fortran' 'python-numpy' 'python-setuptools')
checkdepends=('python-pytest')
source=(
	"$_pkgname-$pkgver.tar.gz::https://github.com/scipy/scipy/archive/v${pkgver}.tar.gz"
)
sha256sums=('4ea68de2840cf7d35c58464412d21f6f154cab7fba610c11002603ee0b9e2372')

build() {
	export LDFLAGS="-shared"

	# build for python3
	cd scipy-${pkgver}
  python3 setup.py config_fc --fcompiler=gnu95 build

}

package() {

	export LDFLAGS="-shared"

	cd scipy-${pkgver}
  python3 setup.py config_fc --fcompiler=gnu95 install \
    --prefix=/usr --root=${pkgdir} --optimize=1

	install -Dm644 LICENSE.txt \
		"${pkgdir}/usr/share/licenses/python-scipy/LICENSE"
}
